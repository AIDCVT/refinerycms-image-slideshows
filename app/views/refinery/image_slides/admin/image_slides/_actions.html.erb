<ul>
  <% if ::Refinery::ImageSlides::Admin::ImageSlidesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.image_slides_admin_image_slides_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_image_slides_admin_image_slide_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::ImageSlides::Admin::ImageSlidesController.sortable? && ::Refinery::ImageSlides::ImageSlide.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Image Slides"),
                 refinery.image_slides_admin_image_slides_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Image Slides"),
                 refinery.image_slides_admin_image_slides_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
